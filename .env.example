# Development Configuration
NODE_ENV=development
MOCK_MODE=true

# Vercel Deployment (Free Tier)
VITE_MOCK_MODE=true
VITE_DISABLE_AI=true
VITE_DISABLE_DEPLOYMENT=true
VITE_DISABLE_REAL_DB=true
VITE_DISABLE_GITHUB=true
VITE_DISABLE_NETLIFY=true

# Production Configuration (Uncle's Hosting)
# NODE_ENV=production
# MOCK_MODE=false
# VITE_MOCK_MODE=false
# VITE_DISABLE_AI=false
# VITE_DISABLE_DEPLOYMENT=false
# VITE_DISABLE_REAL_DB=false
# VITE_DISABLE_GITHUB=false
# VITE_DISABLE_NETLIFY=false

# Core API Keys (Always Required)
VITE_GOOGLE_AI_API_KEY=your_gemini_api_key_here
JWT_SECRET=your_secure_jwt_secret_here

# Supabase (Optional - Only for Production)
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key

# GitHub OAuth (Optional - Only for Production)
VITE_GITHUB_CLIENT_ID=your_github_client_id
GITHUB_CLIENT_SECRET=your_github_client_secret

# Netlify OAuth (Optional - Only for Production)
VITE_NETLIFY_CLIENT_ID=your_netlify_client_id
NETLIFY_CLIENT_SECRET=your_netlify_client_secret